
<div class="container">
    <div class="row">
      <div class="col-md-4">
      <h2>Burgers ready to eat</h2>
      <ul>
      {{#each burgers}}
                {{#unless this.devoured}}
                  <div>
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                      <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
                    </form>
                  </div>
                {{/unless}}
              {{/each}}
      </ul>
      </div>
        
      <div class="col-md-4">
      <h2>Burgers aleady eaten</h2>
      <ul>
               {{#each burgers}}
                {{#if this.devoured}}
                  <div class='burgerEaten'>
                    <div>
                      {{this.burger_name}}
                    </div>
                  </div>
                {{/if}}
              {{/each}}    
      </ul>
      </div>
    </div>
    <div class="row">>
      <h2>What burger do you want?</h2>
      <br>
      <form action="/burgers" method="POST">
          <input type="text" id="name" name="burger_name" placeholder="Name your burger">
          <button type="submit" class="addBurgerButton">Add The Burger</button>
      </form>
    </div>
</div>